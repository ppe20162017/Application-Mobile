<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.agrur.agrur.MainActivity">

    <TextView
        android:text="Entrez la superficie du verger :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleSuperficie"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_below="@+id/editNomVerger"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Entrez le nom du verger :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleNomVerger"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Entrez le nombre d'hectare :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleHectare"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_below="@+id/editSuperficie"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Quel est la variété produite ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleVariete"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_below="@+id/editHectare"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editHectare"
        android:layout_below="@+id/titleHectare"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/titleVariete"
        android:layout_alignEnd="@+id/editHectare"
        android:id="@+id/editVariete"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Dans quel commune se situe-t-il ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editVariete"
        android:layout_centerHorizontal="true"
        android:id="@+id/titleCommune"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:text="A quel producteur appartient-il ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editCommune"
        android:layout_centerHorizontal="true"
        android:id="@+id/titleNomProducteur"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/titleNomProducteur"
        android:id="@+id/editNomProducteur"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editCommune"
        android:layout_below="@+id/titleCommune"
        android:layout_alignStart="@+id/editVariete"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editNomVerger"
        android:layout_below="@+id/titleNomVerger"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editSuperficie"
        android:layout_below="@+id/titleSuperficie"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonValider"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
